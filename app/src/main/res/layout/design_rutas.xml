<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    >
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:src="@mipmap/icon_estacion"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#FFFFFF"
                            android:scaleType="centerCrop"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:id="@+id/txtLetraRu"
                            android:text="A"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="23sp"
                        android:textColor="@color/titulo"
                        android:text="REGULAR A"
                        android:id="@+id/txtNombreRu" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/txtParadasRu"
                        android:textColor="@color/subtitulo"
                        android:text="Para en todas las estaciones."
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center|left"
                        android:maxLines="2"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/txtHoraRu"
                        android:text="6:00AM-12:00PM   5:00PM- 11:00PM "
                        android:drawableLeft="@drawable/ic_hora"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center|left"
                        android:textColor="@color/subtitulo"
                        android:id="@+id/txtFrecuRu"
                        android:text="Cada 30 minutos"
                        android:drawableLeft="@drawable/ic_frecuencia"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d1"
                    android:text="L"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d2"
                    android:text="M"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d3"
                    android:text="X"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d4"
                    android:text="J"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d5"
                    android:text="V"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d6"
                    android:text="S"/>
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/fecha_round"
                    android:id="@+id/d7"
                    android:text="D"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>




